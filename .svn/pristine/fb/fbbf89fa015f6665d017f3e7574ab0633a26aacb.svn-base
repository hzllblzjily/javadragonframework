<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.hongbao</groupId>
    <artifactId>dragonparent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../dragonparent</relativePath>
  </parent>
  <groupId>com.hongbao</groupId>
  <artifactId>dragonutil</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>dragonutil</name>
   <url>http://maven.apache.org</url>

 <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- <java.home>/Library/Java/JavaVirtualMachines/jdk1.8.0_25.jdk/Contents/Home</java.home>  -->
    <java.home>/usr/java/jdk1.8.0_45</java.home>

  </properties>
  <build>
  	<plugins>
  	<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>${java-version}</source>
                    <target>${java-version}</target>
                    <encoding>UTF-8</encoding>
                    <compilerArguments>
                        <verbose />
                        <bootclasspath>${java.home}/jre/lib/rt.jar;${java.home}/jre/lib/jce.jar</bootclasspath>
                    </compilerArguments>
                </configuration>
            </plugin>
        </plugins>
  </build>
  
  <dependencies>
   	<dependency>
        <groupId>mail</groupId>
        <artifactId>java-mail</artifactId>
        <version>1.4.7</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/repo/mail/java-mail/1.4.7/mail.jar</systemPath>
    </dependency>
  </dependencies>
</project>
