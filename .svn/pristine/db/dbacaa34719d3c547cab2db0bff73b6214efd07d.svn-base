@CHARSET "UTF-8";
.shot-image{
	width: 80%;
	border: 1px solid #eee;
}
.ordinary-btn-group{
	margin-bottom:1.5rem;
	width: 13.75rem;
	border-radius:0.25rem;
	border:1px solid #e4e4e4;
}
.ordinary-btn-group .detail-btn{
	border-bottom:1px solid #e4e4e4;
}
.ordinary-btn-group .detail-btn:last-of-type{
	border-bottom:0;
}
.detail-btn{
	height: 3.125rem;
	line-height: 3.125rem;
	font-size: 0.875rem;
	display: block;
	cursor:pointer;
}
.detail-like-btn{
	height: 3.125rem;
	width: 13.625rem;
	line-height: 3.125rem;
	font-size: 1.5rem;
	background-color: #ff5656;
	display: block;
	border-radius: 0.25rem 0.25rem 0 0;
}
.detail-btn:hover{
	color: #666666;
	background: #e4e4e4;
}
.detail-like-btn:hover{
	background: #ff3636;
}
a.detail-like-btn{
	cursor: pointer;
}
.detail-liked-icon{
	margin-right: 0.45rem;
	font-size: 1.8rem;
}
.modal .noScreenShot{
	position:relative;
	top:50%;
	margin-top:-0.9375rem;
}
.info-block{
	
}
.info-cell{
	margin-bottom: 1.75rem;
}
.info-header{
	margin-bottom: 0.35rem;
}